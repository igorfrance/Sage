<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns="http://www.cycle99.com/projects/sage/configuration/project">

	<project
		resourcesPregenerated="false"
		defaultLocale="us"
		defaultCategory="default"
		multiCategory="false"
		debugMode="true"
		sharedCategory="shared"
		mergeResources="false">

		<paths>
			<ResourcePath>~/assets</ResourcePath>
			<!--
			For a multi-category project, resource path might look like this:
			<ResourcePath>~/assets/{category}</ResourcePath>
			-->
			<View>{resourcepath}/views/</View>
			<Module>{resourcepath}/modules/</Module>
			<ViewConfiguration>{resourcepath}/views/{controller}/{action}.xml</ViewConfiguration>
			<ViewTemplate>{resourcepath}/views/{controller}/{action}</ViewTemplate>
			<Dictionary>{resourcepath}/configuration/dictionary/{locale}.xml</Dictionary>
			<DefaultStylesheet>{resourcepath}/views/xslt/default.xsl</DefaultStylesheet>
			<DefaultCategoryStylesheet>{resourcepath}/views/xslt/default.xsl</DefaultCategoryStylesheet>
			<CategoryConfiguration>{resourcepath}/configuration/Category.config</CategoryConfiguration>
			<GlobalizedDirectory>_target/</GlobalizedDirectory>
			<GlobalizedDirectoryForNonFileResources>~/_target/</GlobalizedDirectoryForNonFileResources>
		</paths>
		
		<metaViews>
			<view name="xml" contentType="text/xml" type="Sage.Views.Meta.DivertView,Sage" path="sageresx://sage/resources/metaviews/xml.xsl"/>
			<view name="xmlx" contentType="text/html" type="Sage.Views.Meta.DivertView,Sage" path="sageresx://sage/resources/metaviews/xmlx.xsl"/>
			<view name="htmlx" contentType="text/html" type="Sage.Views.Meta.RetransformView,Sage" path="sageresx://sage/resources/metaviews/xmlx.xsl"/>
			<view name="json" contentType="application/json" type="Sage.Views.Meta.JsonView,Sage"/>
		</metaViews>

		<globalization>
			<locale name="us" dictionaryNames="us,en" resourceNames="us,en,default">
				<format culture="en-us" shortDate="MMMM d, yyyy" longDate="D"/>
			</locale>
		</globalization>
		
		<developers>
			<ip address="::1"/>
			<ip address="127.0.0.1"/>
			<ip address="10.180.0.0" to="10.180.255.255"/>
			<ip address="172.16.0.0" to="172.16.255.255"/>
			<!-- Igor -->
			<ip address="83.163.156.172"/>
		</developers>

	</project>

</configuration>
