<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns="http://www.cycle99.com/schemas/sage/configuration/project.xsd">

	<system
		autoGlobalize="true"
		defaultLocale="us"
		defaultCategory="default"
		multiCategory="false"
		debugMode="true"
		sharedCategory="shared">

		<paths>
			<AssetPath>~/assets</AssetPath>
			<!--
			For a multi-category project, resource path might look like this:
			<AssetPath>~/assets/{category}</AssetPath>
			-->
			<View>{assetpath}/views/</View>
			<Module>{assetpath}/lib/modules/</Module>
			<Extension>~/extensions/</Extension>
			<Dictionary>{assetpath}/configuration/dictionary/{locale}.xml</Dictionary>
			<SiteMap>~/Sitemap.config</SiteMap>
			<DefaultStylesheet>{assetpath}/xslt/default.xslt</DefaultStylesheet>
			<CategoryConfiguration>{assetpath}/configuration/Category.config</CategoryConfiguration>
			<GlobalizedDirectory>_target/</GlobalizedDirectory>
			<GlobalizedDirectoryForNonFileResources>~/_target/</GlobalizedDirectoryForNonFileResources>
		</paths>
		
		<metaViews>
			<view name="xml" contentType="text/xml" type="Sage.Views.Meta.DivertView,Sage" path="sageresx://sage/resources/metaviews/xml.xsl" description="Serves the fully prepared, but not yet transformed, raw XML used for the controller view."/>
			<view name="xmlx" contentType="text/html" type="Sage.Views.Meta.DivertView,Sage" path="sageresx://sage/resources/metaviews/xmlx.xsl" description="Provides a pretty-printed, collapsible view of the fully prepared, but not yet transformed, raw XML used for the controller view."/>
			<!--<view name="xmlx" contentType="text/html" type="Sage.Views.Meta.DivertView,Sage" path="G:\cycle99\projects\web\sage\src\Sage\Resources\MetaViews\Xmlx.xsl" description="Provides a pretty-printed, collapsible view of the fully prepared, but not yet transformed, raw XML used for the controller view."/>-->
			<view name="htmlx" contentType="text/html" type="Sage.Views.Meta.RetransformView,Sage" path="sageresx://sage/resources/metaviews/xmlx.xsl" description="Provides a pretty-printed, collapsible view of the fully transformed, final HTML of the controller view."/>
			<!--<view name="htmlx" contentType="text/html" type="Sage.Views.Meta.RetransformView,Sage" path="G:\cycle99\projects\web\sage\src\Sage\Resources\MetaViews\Xmlx.xsl" description="Provides a pretty-printed, collapsible view of the fully transformed, final HTML of the controller view."/>-->
			<view name="json" contentType="application/json" type="Sage.Views.Meta.JsonView,Sage" description="Provides a JSON view of the fully prepared, but not yet transformed XML used for the controller view. Experimental."/>
		</metaViews>

		<globalization>
			<locale name="us" dictionaryNames="us,en" resourceNames="us,en,default">
				<format culture="en-us" shortDate="MMMM d, yyyy" longDate="D"/>
			</locale>
		</globalization>
		
		<developers>
			<ip address="::1"/>
			<ip address="127.0.0.1"/>
			<ip address="10.180.0.0" to="10.180.255.255"/>
			<ip address="172.16.0.0" to="172.16.255.255"/>
			<!-- Igor -->
			<ip address="83.163.156.172"/>
		</developers>
		
	</system>

</configuration>
